@import '~base/base'

  .topbar
     position fixed
     height 40px
     width: calc(100vw - 2px)
     top 2px
     left: 1px
     z-index: 99999;
     border-radius: 4px
     display flex
     justify-content space-between
     padding: 0px 10px

     .right
         .menus
             margin-top 9px
         &:hover
            .menu
                color #000


.menu
    border none
    border-radius: 50%
    font-size: 12px
    padding: 0px
    transform: scale(0.75)
    cursor pointer
    color transparent
    outline: none
    & + .menu
        margin-left 4px
        

.min-btn
    background-color $color-warning

.max-btn
    background-color $color-success

.close-btn
    background-color $color-danger