@import '~base/base'
 
 .view-home
    width 100vw
    height 100vh
    background: #fff
    position relative
    .home-container
        height calc(100% - 60px)
        width 100%
        flex-align(flex-start,flex-start)

.platform-win32
.platform-linux
    .view-home
        position relative
        left 2px
        top: 2px
        width calc(100vw - 4px)
        height calc(100vh - 4px)
        border-radius: 8px
        box-shadow: 2px 2px 10px 2px rgba(0,0,0,0.1) , 0px 0px 10px 1px rgba(0,0,0,0.08) 